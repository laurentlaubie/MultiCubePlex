{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<h1 class="text-center text-warning mt-2 ">Dernieres images => Modes de jeux</h1>

      
            {# <image src="{{ modes.image }}" width="40%" > #}
<div class="container">



<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
  {%  set isFirst = true %}
    {% for modes in homeGame %}
      {% if isFirst == true %}
    <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="active"></li>
      {% else %}
    <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}"></li>
      {% endif %}
      {% endfor %}
    {# <li data-target="#carouselExampleIndicators" data-slide-to="2"></li> #}
  </ol>

  <!-- images -->
  {%  set isFirst = true %}
  {% for modes in homeGame %}
  {% if isFirst == true %}
  <div class="carousel-inner">
    <div class="carousel-item active">
  {% else %}
    <div class="carousel-item">
    {% endif %}
      <img class="d-block w-100" src="{{ asset(modes.image) }}" alt="First slide">
    </div>
    {% set isFirst = false %}
  {% endfor %}

